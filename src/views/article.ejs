<!DOCTYPE html>
<html>
  <head>
    <title><%= article.title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Custom prose styling for article content */
      .article-content {
        color: #d4d4d8;
        line-height: 1.8;
      }
      .article-content h1,
      .article-content h2,
      .article-content h3 {
        color: #ffffff;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      .article-content h1 {
        font-size: 2rem;
      }
      .article-content h2 {
        font-size: 1.5rem;
      }
      .article-content h3 {
        font-size: 1.25rem;
      }
      .article-content p {
        margin-bottom: 1.5rem;
      }
      .article-content a {
        color: #818cf8;
        text-decoration: underline;
      }
      .article-content a:hover {
        color: #a5b4fc;
      }
      .article-content ul,
      .article-content ol {
        margin-left: 1.5rem;
        margin-bottom: 1.5rem;
      }
      .article-content li {
        margin-bottom: 0.5rem;
      }
      .article-content blockquote {
        border-left: 4px solid #4f46e5;
        padding-left: 1rem;
        margin: 1.5rem 0;
        color: #a1a1aa;
        font-style: italic;
      }
      .article-content code {
        background: #27272a;
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        color: #a5b4fc;
      }
      .article-content pre {
        background: #18181b;
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1.5rem 0;
      }
      .article-content pre code {
        background: none;
        padding: 0;
      }
      .article-content img {
        border-radius: 0.75rem;
        margin: 2rem 0;
      }
    </style>
  </head>
  <body class="bg-zinc-950 min-h-screen p-6 relative">
    <div
      class="absolute top-20 left-20 w-96 h-96 bg-indigo-600 rounded-full mix-blend-normal filter blur-3xl opacity-20 animate-pulse"
    ></div>
    <div
      class="absolute bottom-20 right-20 w-80 h-80 bg-violet-600 rounded-full mix-blend-normal filter blur-3xl opacity-20 animate-pulse"
      style="animation-delay: 1s"
    ></div>

    <div class="max-w-4xl mx-auto relative">
      <div class="mb-6">
        <a
          href="/articles/all"
          class="inline-flex items-center gap-2 text-zinc-400 hover:text-white transition-colors group"
        >
          <svg
            class="w-5 h-5 group-hover:-translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            ></path>
          </svg>
          Back to articles
        </a>
      </div>

      <div
        class="bg-zinc-900/50 backdrop-blur-xl rounded-2xl border border-zinc-800/50 shadow-2xl overflow-hidden"
      >
        <div class="border-b border-zinc-800/50 p-8 md:p-12">
          <h1
            class="text-4xl md:text-5xl font-bold text-white mb-4 leading-tight"
          >
            <%= article.title %>
          </h1>

          <div class="flex items-center gap-4 text-sm text-zinc-400">
            <div class="flex items-center gap-2">
              <img
                src="<%= authorPhoto ? '/uploads/' +authorPhoto : '/uploads/default-avatar.jpg' %>"
                alt="<%= article.authorHandle %>"
                class="w-12 h-12 rounded-full object-cover ring-2 ring-indigo-500/20"
              />
              <span class="text-zinc-300 font-medium"
                >@<%= article.authorHandle %></span
              >
            </div>
            <span>•</span>
            <span
              ><%= new Date(article.createdAt).toLocaleDateString("en-GB", {
              year: 'numeric', month: 'long', day: 'numeric' }) %></span
            >
            <% if (article.updatedAt) {%>
            <span>•</span>
            <span class="text-green-400">Updated</span>
            <%} %>
          </div>
        </div>

        <div class="p-8 md:p-12">
          <div class="article-content"><%- article.body %></div>
        </div>

        <div class="border-t border-zinc-800/50 p-8 md:p-12 bg-zinc-800/20">
          <div class="flex flex-wrap gap-3">
            <!-- Edit -->
            <form action="/articles/<%= article.id %>/edit" method="GET">
              <button
                type="submit"
                class="inline-flex items-center gap-2 px-6 py-3 bg-zinc-800/50 hover:bg-zinc-700/50 border border-zinc-700/50 text-white font-medium rounded-xl transition-all duration-200"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  ></path>
                </svg>
                Edit Article
              </button>
            </form>

            <form action="/articles/<%= article.id %>/delete" method="POST">
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this article?')"
                class="inline-flex items-center gap-2 px-6 py-3 bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 text-red-400 hover:text-red-300 font-medium rounded-xl transition-all duration-200"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                  ></path>
                </svg>
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <p class="text-center text-zinc-600 text-sm mt-8">
        Reading time: ~<%= Math.ceil(article.body.replace(/<[^>]+>/g,
        '').split(' ').length / 200) %> min
      </p>
    </div>
  </body>
</html>
