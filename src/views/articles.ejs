<!DOCTYPE html>
<html>
  <head>
    <title>Articles</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-950 min-h-screen p-6 md:p-8 relative">
    <div class="max-w-4xl mx-auto relative">
      <div class="flex justify-between items-center mb-8">
        <a
          href="/articles/create"
          class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-indigo-600 to-violet-600 hover:from-indigo-500 hover:to-violet-500 text-white font-semibold rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/50 transition-all duration-200"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"
            ></path>
          </svg>
          New Article
        </a>
        <a
          href="/users/profile"
          class="text-zinc-300 hover:text-white font-medium inline-flex items-center gap-2 group transition-colors"
        >
          Profile
          <svg
            class="w-4 h-4 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"
            ></path>
          </svg>
        </a>
      </div>

      <div class="flex flex-wrap gap-3 mb-8">
        <a
          href="#"
          class="px-6 py-2 bg-zinc-800/50 border border-zinc-700/50 text-white font-medium rounded-xl hover:bg-zinc-700/50 transition-all duration-200"
        >
          All Articles
        </a>
        <a
          href="/articles/create"
          class="px-6 py-2 bg-zinc-900/30 border border-zinc-800/50 text-zinc-400 font-medium rounded-xl hover:bg-zinc-800/30 hover:text-zinc-300 transition-all duration-200"
        >
          Create New
        </a>
        <a
          href="/articles/view"
          class="px-6 py-2 bg-zinc-900/30 border border-zinc-800/50 text-zinc-400 font-medium rounded-xl hover:bg-zinc-800/30 hover:text-zinc-300 transition-all duration-200"
        >
          Your Articles
        </a>
      </div>

      <% if (typeof message !== 'undefined' && message) { %>
      <div class="mb-6 bg-red-500/10 border border-red-500/20 rounded-xl p-4">
        <p class="text-red-400 text-sm"><%= message %></p>
      </div>
      <% } %>

      <!-- Articles list -->
      <% if (articles.length === 0) { %>
      <div
        class="bg-zinc-900/50 backdrop-blur-xl rounded-2xl border border-zinc-800/50 p-12 text-center"
      >
        <svg
          class="w-16 h-16 text-zinc-700 mx-auto mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          ></path>
        </svg>
        <p class="text-zinc-400 text-lg">No articles uploaded yet.</p>
        <p class="text-zinc-500 text-sm mt-2">
          Create your first article to get started!
        </p>
      </div>
      <% } else { %>
      <div class="space-y-4">
        <% articles.forEach(article => { %>
        <div
          class="bg-zinc-900/50 backdrop-blur-xl rounded-2xl border border-zinc-800/50 p-6 hover:border-zinc-700/50 transition-all duration-200 group"
        >
          <div
            class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-4"
          >
            <div class="flex items-center gap-3">
              <img
                src="<%= article.authorPhoto %>"
                alt="<%= article.authorHandle %>"
                class="w-12 h-12 rounded-full object-cover ring-2 ring-indigo-500/20"
              />
              <div>
                <h2
                  class="text-xl font-semibold text-white group-hover:text-indigo-400 transition-colors"
                >
                  <%= article.title %>
                </h2>
                <p class="text-zinc-500 text-sm">
                  @<%= article.authorHandle %>
                </p>
              </div>
            </div>

            <div class="text-right">
              <p class="text-zinc-400 text-sm">
                <%= new Date(article.createdAt).toLocaleDateString("en-GB") %>
              </p>
              <% if (article.updatedAt) {%>
              <p class="text-green-400 text-xs mt-1">
                Updated <%= new
                Date(article.updatedAt).toLocaleDateString("en-GB") %>
              </p>
              <%} %>
            </div>
          </div>

          <div class="bg-zinc-800/30 rounded-xl p-4 mb-4">
            <p class="text-zinc-300 text-sm line-clamp-2">
              <%= article.body.replace(/<[^>]+>/g, '').substring(0, 150) %>...
            </p>
          </div>

          <a
            href="/articles/<%= article._id %>"
            class="inline-flex items-center gap-2 text-indigo-400 hover:text-indigo-300 text-sm font-medium group/link transition-colors"
          >
            Read full article
            <svg
              class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              ></path>
            </svg>
          </a>
        </div>
        <% }) %>
      </div>
      <% } %>

      <p class="text-center text-zinc-600 text-sm mt-8">
        <%= articles.length %> <%= articles.length === 1 ? 'article' :
        'articles' %> available
      </p>
    </div>
  </body>
</html>
