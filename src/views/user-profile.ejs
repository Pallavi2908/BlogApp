<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-zinc-950 min-h-screen flex items-center justify-center p-6 relative overflow"
  >
    <div
      class="absolute top-20 left-20 w-96 h-96 bg-indigo-600 rounded-full mix-blend-normal filter blur-3xl opacity-20 animate-pulse"
    ></div>
    <div
      class="absolute bottom-20 right-20 w-80 h-80 bg-violet-600 rounded-full mix-blend-normal filter blur-3xl opacity-20 animate-pulse"
      style="animation-delay: 1s"
    ></div>

    <div class="max-w-5xl w-full relative">
      <div
        class="bg-zinc-900/50 backdrop-blur-xl rounded-2xl border border-zinc-800/50 shadow-2xl overflow-hidden flex flex-col md:flex-row"
      >
        <div
          class="md:w-1/3 bg-zinc-800/30 border-r border-zinc-800/50 flex flex-col items-center justify-center p-8"
        >
          <form
            id="photo-form"
            action="/users/update-photo"
            method="POST"
            enctype="multipart/form-data"
            class="flex flex-col items-center"
          >
            <!-- Profile photo circle -->
            <div
              class="w-32 h-32 rounded-full overflow-hidden bg-zinc-800 mb-4 relative ring-4 ring-indigo-500/20"
            >
              <img
                id="profile-preview"
                src="<%= user.photo%>"
                alt="User photo"
                class="w-full h-full object-cover"
              />
            </div>

            <div class="flex flex-col gap-2 w-full">
              <label
                for="photo-input"
                class="cursor-pointer bg-zinc-800/50 hover:bg-zinc-700/50 text-zinc-300 hover:text-white border border-zinc-700/50 px-4 py-2 rounded-xl text-sm text-center transition-all duration-200"
              >
                Change Photo
              </label>
              <input
                type="file"
                id="photo-input"
                name="photo"
                accept="image/*"
                class="hidden"
              />

              <button
                type="submit"
                id="update-photo-btn"
                class="bg-gradient-to-r from-indigo-600 to-violet-600 hover:from-indigo-500 hover:to-violet-500 text-white px-4 py-2 rounded-xl text-sm shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/50 transition-all duration-200"
              >
                Update Photo
              </button>
            </div>
          </form>

          <!-- User info -->
          <div class="mt-6 text-center">
            <h2 class="text-lg font-semibold text-white"><%= user.name %></h2>
            <p class="text-sm text-zinc-400 mt-1">@<%= user.userHandle %></p>
          </div>
        </div>

        <!-- Right profile form -->
        <div class="flex-1 p-8 md:p-10">
          <div class="flex justify-between items-center mb-8">
            <div>
              <% if (typeof message !== 'undefined' && message) { %>
              <div
                class="mb-4 bg-green-500/10 border border-green-500/20 rounded-xl px-4 py-2"
              >
                <p class="text-green-400 text-sm"><%= message %></p>
              </div>
              <% } %>
              <h1 class="text-2xl font-bold text-white">
                Welcome back,<br />
                <%= user.name %>
              </h1>
              <p class="text-zinc-400 text-sm mt-1">
                Manage your profile settings
              </p>
            </div>
            <a
              href="/articles/all"
              class="text-zinc-300 hover:text-white font-medium inline-flex items-center gap-2 group transition-colors"
            >
              Articles
              <svg
                class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                ></path>
              </svg>
            </a>
          </div>

          <!-- Form -->
          <form action="/users/update" method="POST" class="space-y-4">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-zinc-300 mb-2"
                >Name</label
              >
              <input
                name="name"
                type="text"
                id="name"
                value="<%= user.name %>"
                class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700/50 rounded-xl text-white placeholder-zinc-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200 outline-none"
              />
            </div>

            <div>
              <label
                for="user-handle"
                class="block text-sm font-medium text-zinc-300 mb-2"
                >User Handle</label
              >
              <input
                name="userHandle"
                type="text"
                id="user-handle"
                value="<%= user.userHandle %>"
                class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700/50 rounded-xl text-white placeholder-zinc-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200 outline-none"
              />
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-zinc-300 mb-2"
                >Email</label
              >
              <input
                name="emailId"
                type="email"
                id="email"
                value="<%= user.emailId %>"
                class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700/50 rounded-xl text-white placeholder-zinc-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200 outline-none"
              />
            </div>

            <div>
              <label
                for="password"
                class="block text-sm font-medium text-zinc-300 mb-2"
                >Password</label
              >
              <input
                name="password"
                type="password"
                id="password"
                placeholder="Update password"
                class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700/50 rounded-xl text-white placeholder-zinc-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200 outline-none"
              />
            </div>

            <div>
              <label
                for="birthday"
                class="block text-sm font-medium text-zinc-300 mb-2"
                >Date of Birth</label
              >
              <input
                name="birthday"
                type="date"
                id="birthday"
                value="<%= new Date(user.birthday).toISOString().split('T')[0] %>"
                class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700/50 rounded-xl text-white placeholder-zinc-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200 outline-none [color-scheme:dark]"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-gradient-to-r from-indigo-600 to-violet-600 hover:from-indigo-500 hover:to-violet-500 text-white font-semibold py-3 rounded-xl shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/50 transform hover:scale-[1.02] transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-zinc-900 mt-6"
            >
              Update Profile
            </button>
          </form>
        </div>
      </div>

      <p class="text-center text-zinc-600 text-sm mt-6">
        Choose a pfp which expresses you the best <3
      </p>
    </div>

    <script>
      const photoInput = document.getElementById("photo-input");
      const preview = document.getElementById("profile-preview");
      const updateBtn = document.getElementById("update-photo-btn");

      photoInput.addEventListener("change", () => {
        const file = photoInput.files[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = (e) => {
          preview.src = e.target.result;
          updateBtn.classList.remove("hidden");
        };
        reader.readAsDataURL(file);
      });
    </script>
  </body>
</html>
